// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  AFFILIATE
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CommissionType {
  CPA
  REVENUE_SHARE
}

enum AffiliateInviteStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(AFFILIATE)
  affiliateId String? @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  affiliate Affiliate?
  sessions Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Affiliate {
  id                    String   @id @default(cuid())
  externalId            String?  @unique
  name                  String
  siteIds               Int[]
  userId                String   @unique
  dealId                String?
  referredById          String?
  superbetAffiliateLink String?
  superbetAffiliateId   String?
  instagramLink         String?
  facebookLink          String?
  telegramLink          String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  deal            Deal?             @relation(fields: [dealId], references: [id], onDelete: SetNull)
  referredBy      Affiliate?        @relation("AffiliateReferrals", fields: [referredById], references: [id], onDelete: SetNull)
  referrals       Affiliate[]       @relation("AffiliateReferrals")
  players         Player[]
  ftds            FTD[]
  transactions    Transaction[]
  commissions     Commission[]
  revshareReports RevShareReport[]
  invite          AffiliateInvite?

  @@index([referredById])
  @@map("affiliates")
}

model Deal {
  id          String   @id @default(cuid())
  name        String
  cpaValue    Decimal  @db.Decimal(10, 2)
  revSharePercentage Decimal @db.Decimal(5, 2)
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  affiliates  Affiliate[]

  @@map("deals")
}

model Player {
  id          String   @id @default(cuid())
  affiliateId String
  externalId  String?  @unique
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  ftds        FTD[]
  transactions Transaction[]

  @@map("players")
}

model FTD {
  id          String   @id @default(cuid())
  affiliateId String
  playerId    String
  amount      Decimal  @db.Decimal(10, 2)
  date        DateTime
  campaignId  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  player      Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
  @@index([date])
  @@map("ftds")
}

model Transaction {
  id          String            @id @default(cuid())
  affiliateId String
  playerId    String?
  amount      Decimal            @db.Decimal(10, 2)
  type        CommissionType
  status      TransactionStatus  @default(PENDING)
  date        DateTime
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  player      Player?   @relation(fields: [playerId], references: [id], onDelete: SetNull)

  @@index([affiliateId])
  @@index([date])
  @@index([status])
  @@map("transactions")
}

model Commission {
  id          String   @id @default(cuid())
  affiliateId String
  ftdId       String?  @unique
  amount      Decimal  @db.Decimal(10, 2)
  type        CommissionType
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
  @@index([date])
  @@map("commissions")
}

model RevShareReport {
  id          String   @id @default(cuid())
  affiliateId String
  date        DateTime
  revenue     Decimal  @db.Decimal(10, 2)
  percentage  Decimal  @db.Decimal(5, 2)
  commission  Decimal  @db.Decimal(10, 2)
  campaignId  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)

  @@index([affiliateId])
  @@index([date])
  @@map("revshare_reports")
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_configs")
}

model AffiliateInvite {
  id                String                @id @default(cuid())
  code              String                @unique
  email             String
  name              String
  status            AffiliateInviteStatus @default(PENDING)
  expiresAt         DateTime
  affiliateId       String?               @unique
  superbetRequestId String?
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt

  affiliate Affiliate? @relation(fields: [affiliateId], references: [id], onDelete: SetNull)

  @@index([code])
  @@index([status])
  @@index([email])
  @@map("affiliate_invites")
}
